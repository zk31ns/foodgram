server {
    server_name 51.250.101.208  fudo.ddns.net;


    location / {
        proxy_set_header Host              $host;
        proxy_set_header X-Real-IP         $remote_addr;
        proxy_set_header X-Forwarded-For   $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_pass http://127.0.0.1:8000;
        client_max_body_size 50M;
    }


    listen 443 ssl;
    # SSL-сертификаты (управляются Certbot)
    ssl_certificate /etc/letsencrypt/live/fudo.ddns.net/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/fudo.ddns.net/privkey.pem;
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;
}


server {
    if ($host = fudo.ddns.net) {
        return 301 https://$host$request_uri;
    }

    listen 80;
    server_name 51.250.101.208  fudo.ddns.net;
    return 404;
}